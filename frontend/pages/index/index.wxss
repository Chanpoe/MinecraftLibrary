/* pages/list/list.wxss */
/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.row {
  display: flex;
  justify-content: space-between;
  width: 90%; /* 控制整体宽度，避免溢出 */
  margin-bottom: 20rpx;
}

.item {
  width: 30%; /* 每行3列，确保均分 */
}

.image {
  width: 100px;
  height: 100px;
  object-fit: cover; /* 按比例拉伸填充 */
  border-radius: 8rpx; /* 可选 */
  display: flex;
}

.desc text {
  width: 90%; /* 让“玩法介绍”与 row 宽度一致 */
  margin-left: 5%; /* 让它左对齐 row */
}

.container2 view {
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  margin-top: 10px;
}

.desc {
  font-size: 20px; /* 设置字体大小 */
  font-weight: bold; /* 字体加粗 */
  margin-left: 0; /* 取消默认外边距 */
  padding-left: 15px; /* 设置左侧内边距，与 .container1 的间距保持一致 */
  text-align: left; /* 确保文字左对齐 */
  padding-top: 50px; 
}


.container1 view:nth-child(1) {
  background-color: blanchedalmond;
}
.container1 view:nth-child(2) {
  background-color: blanchedalmond;
}
.container1 view:nth-child(3) {
  background-color: blanchedalmond;
}

.container2 view:nth-child(1) {
  background-color: blanchedalmond;
}
.container2 view:nth-child(2) {
  background-color: blanchedalmond;
}
.container2 view:nth-child(3) {
  background-color: blanchedalmond;
}

.container1 {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.container2 {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.header-image {
  width: 100%; /* 图片宽度占满屏幕 */
  height: auto; /* 自动调整高度以保持比例 */
  display: block; /* 去掉图片底部间隙 */
}

.header {
  width: 100%;
  height: auto; /* 根据图片内容调整 */
  margin: 0;
  padding: 0;
}
