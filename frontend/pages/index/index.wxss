/* pages/list/list.wxss */
/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.desc-container {
  width: 100%;
  margin-left: 30px;
}

.row {
  display: flex;
  justify-content: space-between;
  width: 90%; /* 控制整体宽度，避免溢出 */
  margin-bottom: 20rpx;
}

.item {
  width: 28%; /* 每行3列，确保均分 */
}

.item-text {
  text-align: center;
}

.image {
  width: 100px;
  height: 100px;
  object-fit: cover; /* 按比例拉伸填充 */
  border-radius: 8rpx; /* 可选 */
  display: flex;
}

.container2 view {
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  margin-top: 10px;
}

.desc {
  font-size: 20px; /* 设置字体大小 */
  font-weight: bold; /* 字体加粗 */
  padding-top: 20px; 
}


.container1 view:nth-child(1) {
  background-color: blanchedalmond;
}
.container1 view:nth-child(2) {
  background-color: blanchedalmond;
}
.container1 view:nth-child(3) {
  background-color: blanchedalmond;
}

.container2 view:nth-child(1) {
  background-color: blanchedalmond;
}
.container2 view:nth-child(2) {
  background-color: blanchedalmond;
}
.container2 view:nth-child(3) {
  background-color: blanchedalmond;
}

.container1 {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.container2 {
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.header-image {
  width: 100%; /* 图片宽度占满屏幕 */
  height: auto; /* 自动调整高度以保持比例 */
  display: block; /* 去掉图片底部间隙 */
}



.swiper-container {
  height: 200px;
}